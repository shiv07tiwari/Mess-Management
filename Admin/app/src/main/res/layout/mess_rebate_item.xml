<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:weightSum="3"
                  android:padding="5dp"
                  android:layout_height="wrap_content"
                  xmlns:app="http://schemas.android.com/apk/res-auto"
                  android:orientation="horizontal">

        <ImageView android:layout_width="50dp" android:layout_height="50dp"
                   android:src="@drawable/ic_insert_drive_file_black_24dp"
                   android:layout_gravity="center"/>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_marginTop="5dp"
                      android:layout_weight="1">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Shivansh Tiwari"
                      android:layout_marginStart="10dp"
                      android:textColor="@color/black"
                      android:textSize="16dp"
                      android:id="@+id/rebate_roll"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="IIT2017100"
                      android:layout_marginStart="10dp"
                      android:textColor="@color/black"
                      android:layout_marginTop="5dp"
                      android:textSize="15dp"
                      android:id="@+id/rebate_from"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="shivansh16tiwari@gmail.com"
                      android:textColor="@color/black"
                      android:layout_marginStart="10dp"
                      android:layout_marginTop="5dp"
                      android:textSize="12dp"
                      android:layout_marginBottom="5dp"
                      android:id="@+id/rebate_to"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_gravity="center"
                      android:layout_weight="2">
            <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
                    android:text="Verify"
                    app:spinning_bar_color="@color/green"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:id="@+id/rebate_button_verify"
                    android:layout_width="match_parent"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:background="@color/blue_light">

            </br.com.simplepass.loading_button_lib.customViews.CircularProgressButton>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Amount : $ 435"
                      android:textColor="@color/red"
                      android:layout_marginTop="5dp"
                      android:layout_gravity="center"
                      android:textSize="12dp"
                      android:layout_marginBottom="5dp"
                      android:id="@+id/rebate_amount"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>